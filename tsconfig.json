{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["DOM", "ES2020", "webworker"],
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["frontend/*"],
      "@infrastructure/*": ["backend/infrastructure/*"],
      "@adapters": ["backend/adapters/index"],
      "@entities": ["backend/entities/index"],
      "@useCases": ["backend/useCases/index"],
      "@utils": ["backend/utils/index"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "target": "ES2015",
      "module": "CommonJS"
    }
  }
}
